direction: right

classes: {
  data: { style: { fill: "#0f766e"; stroke: "#34d399"; font-color: white } }
  control: { style: { fill: "#111827"; stroke: "#6366f1"; font-color: white } }
  package: { style: { fill: "#34495e"; font-color: white; stroke-width: 0 } }
  app: { style: { fill: "#9b59b6"; font-color: white; stroke-width: 0 } }
}

Git: {
  class: data
  label: "Git Repository (K8s/)"
  
  Observability: {
    class: package
    label: "observability/"
    tooltip: "Contains: prometheus, loki, fluent-bit"
  }
  
  CICD: {
    class: package
    label: "cicd/"
    tooltip: "Contains: argo-workflows, sonarqube"
  }
  
  Security: {
    class: package
    label: "security/"
    tooltip: "Contains: trivy"
  }
}

ArgoCD: {
  class: control
  label: "ArgoCD Control Plane"
  
  ObsApps: {
    class: app
    label: "Observability Apps"
  }
  
  CICDApps: {
    class: app
    label: "CI/CD Apps"
  }
  
  SecApps: {
    class: app
    label: "Security Apps"
  }
}

# Generators
Git.Observability -> ArgoCD.ObsApps: "Generates"
Git.CICD -> ArgoCD.CICDApps: "Generates"
Git.Security -> ArgoCD.SecApps: "Generates"
