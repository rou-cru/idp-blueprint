---
interface Props {
  /** Optional: Semantic type of the persona (currently just for styling hooks if needed) */
  type?: string;
}
---

<span class="persona-chip">
  <slot />
</span>

<style>
  .persona-chip {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.625rem;
    border-radius: 4px;
    background: rgba(99, 102, 241, 0.1);
    border: 1px solid rgba(99, 102, 241, 0.2);
    color: rgb(79, 70, 229);
    font-size: 0.75rem;
    font-weight: 500;
    margin-right: 0.5rem;
  }

  :global([data-theme="dark"]) .persona-chip {
    background: rgba(129, 140, 248, 0.15);
    border-color: rgba(129, 140, 248, 0.3);
    color: rgb(165, 180, 252);
  }
</style>