---
// This component enhances all code blocks with copy buttons
---

<script>
  function enhanceCodeBlocks() {
    const codeBlocks = document.querySelectorAll('pre:not(.enhanced)');

    codeBlocks.forEach((pre) => {
      // Mark as enhanced
      pre.classList.add('enhanced');

      // Find the proper container to attach the button to.
      // Astro Expressive Code wraps pre in a div/figure with class .expressive-code
      const container = pre.closest('.expressive-code') || pre;

      // Make container relative for absolute button positioning
      if (!(container instanceof HTMLElement)) return;
      
      // Ensure container has relative positioning if it's not the pre itself
      if (container !== pre) {
        container.style.position = 'relative';
      } else {
        pre.style.position = 'relative';
      }

      // Get the code text
      const code = pre.querySelector('code');
      if (!code) return;

      const codeText = code.textContent || '';

      // Create copy button
      const button = document.createElement('button');
      button.className = 'copy-button';
      button.setAttribute('aria-label', 'Copy code');
      button.setAttribute('title', 'Copy code');
      button.innerHTML = `
        <svg class="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
        </svg>
        <svg class="check-icon hidden" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span class="copy-text">Copy</span>
      `;

      // Add click handler
      button.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText(codeText);

          // Update button state
          button.classList.add('copied');
          const copyIcon = button.querySelector('.copy-icon');
          const checkIcon = button.querySelector('.check-icon');
          const copyText = button.querySelector('.copy-text');

          if (copyIcon) copyIcon.classList.add('hidden');
          if (checkIcon) checkIcon.classList.remove('hidden');
          if (copyText) copyText.textContent = 'Copied!';

          // Reset after 2 seconds
          setTimeout(() => {
            button.classList.remove('copied');
            if (copyIcon) copyIcon.classList.remove('hidden');
            if (checkIcon) checkIcon.classList.add('hidden');
            if (copyText) copyText.textContent = 'Copy';
          }, 2000);
        } catch (err) {
          console.error('Failed to copy text:', err);
        }
      });

      // Append button to the container (wrapper or pre)
      container.appendChild(button);
    });
  }

  // Run on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', enhanceCodeBlocks);
  } else {
    enhanceCodeBlocks();
  }

  // Also run when navigating (for SPA-like behavior)
  document.addEventListener('astro:page-load', enhanceCodeBlocks);
</script>

<style is:global>
  pre.enhanced {
    @apply relative;
  }

  .copy-button {
    @apply absolute top-2 right-2 z-10;
    @apply flex items-center gap-1.5 px-2.5 py-1.5;
    @apply text-xs font-medium text-text-secondary;
    @apply bg-bg-muted border border-border-emphasis rounded-md;
    @apply opacity-0 transition-all duration-200 cursor-pointer;
  }

  .copy-button:hover {
    @apply text-text-primary bg-bg-elevated border-border-hover;
  }

  .copy-button.copied {
    border-color: theme('colors.success');
    color: theme('colors.success');
    background-color: rgba(34, 197, 94, 0.15);
  }

  .copy-text {
    @apply whitespace-nowrap;
  }

  /* Show button on parent hover */
  pre:hover .copy-button {
    @apply opacity-100;
  }

  /* Always show when copied */
  .copy-button.copied {
    @apply opacity-100;
  }

  /* Focus state */
  .copy-button:focus-visible {
    @apply opacity-100 outline-none ring-2 ring-brand-purple ring-offset-2 ring-offset-bg-base;
  }
</style>
