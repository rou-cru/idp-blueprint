{
  "mcpServers": {
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "${workspaceFolder}"
      ]
    },
    "repomix": {
      "command": "npx",
      "args": [
        "-y",
        "repomix-mcp@latest"
      ]
    },
    "react-guide": {
      "command": "npx",
      "args": [
        "@mrnitro360/react-native-mcp-guide@1.1.0"
      ]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking",
        "--mcp",
        "--max-steps",
        "10"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },
    "Astro docs": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.docs.astro.build/mcp"
      ]
    },
    "grafana": {
      "command": "mcp-grafana",
      "args": [],
      "env": {
        "GRAFANA_URL": "http://grafana.192-168-65-16.nip.io",
        "GRAFANA_USERNAME": "admin",
        "GRAFANA_PASSWORD": "graf"
      }
    },
    "svelte": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@sveltejs/mcp"
      ],
      "env": {}
    }
  }
}