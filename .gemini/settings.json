{
  "mcpServers": {
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "${workspaceFolder}"
      ]
    },
    "memory": {
      "command": "memory-mcp-server-go",
      "args": [
        "-memory",
        "${workspaceFolder}/.memory/graph.db"
      ]
    },
    "repomix": {
      "command": "npx",
      "args": [
        "-y",
        "repomix-mcp@latest"
      ]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking",
        "--mcp",
        "--max-steps",
        "10"
      ]
    }
  }
}