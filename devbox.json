{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "env": {
    "NIXPKGS_ALLOW_UNFREE": "1"
  },
  "packages": [
    "go-task@3.44.1",
    "kubectl@1.33.4",
    "kubernetes-helm@3.19.0",
    "kustomize@5.7.1",
    "helm-docs@1.14.2",
    "k3d@5.8.3",
    "k9s@0.50.9",
    "cilium-cli@0.18.7",
    "argocd@3.1.6",
    "bpytop@1.0.68",
    "kubectl-doctor@0.3.1",
    "kubectl-convert@1.33.4",
    "kubectl-graph@0.7.0",
    "kubectl-ktop@0.4.1",
    "kubectl-klock@0.8.2",
    "yamllint@1.37.1",
    "shellcheck@0.10.0",
    "hadolint@2.12.0",
    "markdownlint-cli2@0.18.1",
    "commitlint-rs@0.2.3",
    "kubeval@0.16.1",
    "kyverno@1.15.1",
    "checkov@3.2.471",
    "trufflehog@3.90.8",
    "conftest@0.62.0",
    "prettier@3.6.2",
    "jq@1.8.1",
    "yq@3.4.3",
    "vault-bin@1.20.4",
    "gettext@0.22.5",
    "dasel@2.7.0",
    "apacheHttpd@latest",
    "uv@0.8.23",
    "d2@0.7.1",
    "python312@latest"
  ],
  "shell": {
    "init_hook": [
      "export workspaceFolder=$PWD",
      "export CODEX_HOME=$workspaceFolder/.codex",
      "echo 'Preparing Env...'",
      ". .devcontainer/init.sh",
      "uv sync",
      "clear"
    ]
  }
}
