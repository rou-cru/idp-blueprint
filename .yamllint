# .yamllint

extends: default

rules:
  # Disable line length checks, as Prettier will handle it.
  line-length: disable

  # Disable the requirement for a document start (---).
  document-start: disable

  # Disable comment spacing rules for now.
  comments: disable

  # Disable the truthy check, as it conflicts with GitHub Actions syntax (e.g., `on:`).
  truthy: disable
